<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Carview"
    android:padding="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp">


    <RelativeLayout
        android:orientation="vertical"
       android:paddingLeft="10dp"
        android:id="@+id/fila_salida_encargo"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/nom_invitado"
            android:text="DELHEL DELHEL"
            android:paddingTop="5dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:textColor="@color/cardview_dark_background"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/txt_hora"
            android:layout_toStartOf="@+id/txt_hora"/>

            <TextView
                android:id="@+id/dni_invitado"
                android:layout_width="match_parent"
                android:text="DETALLE"
                android:layout_height="wrap_content"
                android:paddingBottom="3dp"
                android:layout_below="@+id/nom_invitado"
                android:layout_toLeftOf="@+id/txt_hora"
                android:layout_toStartOf="@+id/txt_hora" />





        <TextView
            android:id="@+id/lblpuerta"
            android:layout_width="wrap_content"
            android:text="PUERTA"
            android:layout_height="wrap_content"
            android:textSize="11dp"
            android:layout_marginRight="60dp"
            android:layout_marginEnd="60dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:paddingTop="5dp"
            android:textStyle="bold"
            android:textColor="@color/cardview_dark_background"
            />

        <TextView
            android:id="@+id/txt_hora"
            android:layout_width="wrap_content"
            android:text="HORA"
            android:layout_height="wrap_content"
            android:textSize="11dp"
            android:layout_below="@id/lblpuerta"
            android:layout_marginRight="60dp"
            android:layout_marginEnd="60dp"
            android:layout_alignBottom="@+id/dni_invitado"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />





    </RelativeLayout>


    <Button
        android:textColor="@color/blanco"
        android:background="@drawable/boton"
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:id="@+id/btn_raya"
        android:layout_gravity="left"
        android:layout_toRightOf="@+id/fila_salida_encargo"
        android:drawableLeft="@drawable/ic_more_vert_black_24dp"
        />

    <ImageView
        android:textColor="@color/blanco"
        android:background="@color/blanco"
        android:layout_width="50dp"
        android:padding="7dp"
        android:layout_height="match_parent"
        android:id="@+id/btn_opsiones"
        android:src="@drawable/lista"
        android:layout_gravity="right"
        android:layout_toRightOf="@+id/fila_salida_encargo"

        />




</android.support.v7.widget.CardView>
