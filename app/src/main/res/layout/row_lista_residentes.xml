<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    card_view:cardElevation="4dp"
    android:layout_margin="3dp"
    card_view:cardCornerRadius="2dp"
    android:layout_height="wrap_content">


    <LinearLayout
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/avatar_roy"
        android:scaleType="centerCrop"
        android:layout_height="150dp"
        android:id="@+id/foto_residente" />


    <TextView
        android:id="@+id/dni"
        android:layout_width="match_parent"
        android:textColor="@color/morado"
        android:text="45668686"
        android:gravity="center"
        android:padding="8dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nom_residente"
        android:layout_alignLeft="@+id/nom_residente"
        android:layout_alignStart="@+id/nom_residente"
        android:layout_gravity="left|bottom" />

       <View

           android:background="@color/colorPrimary"
           android:layout_width="match_parent"
           android:layout_marginBottom="5dp"
           android:layout_height="1px"></View>

    <TextView
        android:id="@+id/nom_residente"
        android:layout_width="match_parent"
        android:text="GAVILANO FIORELLA"
        android:textColor="@color/color_header"
        android:textStyle="bold|normal"
        android:gravity="center"
        android:layout_height="wrap_content"
       />

    </LinearLayout>

</android.support.v7.widget.CardView>

