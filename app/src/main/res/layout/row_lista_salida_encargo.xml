<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/Carview"
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/fila_salida_encargo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:textColor="@color/blanco"
                android:background="@drawable/boton"
                android:layout_width="4dp"
                android:layout_marginRight="4dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_raya"
                android:layout_gravity="left"
                />


            <TextView
            android:id="@+id/nom_entidad"
                android:layout_toRightOf="@+id/btn_raya"
            android:text="EDUARDO ROSALES"
                android:padding="4dp"
                android:textStyle="bold"
            android:layout_width="match_parent"
            android:textColor="#333"
            android:layout_height="wrap_content" />

<TextView
    android:text="NÂ°  :"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/textView3"
    android:layout_marginLeft="8dp"
    android:layout_marginStart="8dp"
    android:layout_alignTop="@+id/num_departamento"
    android:layout_toRightOf="@+id/btn_raya"
    android:layout_toEndOf="@+id/btn_raya" />
            <TextView
                android:id="@+id/num_departamento"
                android:layout_width="wrap_content"
                android:text="165416"
                android:paddingLeft="4dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nom_entidad"
                android:layout_toRightOf="@+id/textView3"
                android:layout_toEndOf="@+id/textView3"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" />

            <TextView
                android:layout_width="25dp"
                android:id="@+id/cantidades"
                android:textColor="@color/blanco"
                android:gravity="center"
                android:textSize="11dp"
                android:background="@drawable/btn_circulo"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp" />

        </RelativeLayout>

</android.support.v7.widget.CardView>

