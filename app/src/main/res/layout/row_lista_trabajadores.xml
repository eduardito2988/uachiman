<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

   <LinearLayout
       android:id="@+id/fila_hora"
       android:layout_width="match_parent"
       android:padding="15dp"
       android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dia"
        android:layout_width="80dp"
        android:text="MIERCOLES"
        android:textColor="@color/color_header"
        android:textSize="13dp"
        android:textStyle="bold|normal"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="5dp" />


    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout"
        android:layout_toRightOf="@+id/nom_trabajador"
        android:layout_toEndOf="@+id/nom_trabajador">


        <TextView
            android:text="Ingreso :"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_ingreso"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/hora_ingreso"
            android:layout_toStartOf="@+id/hora_ingreso"
            android:layout_marginRight="3dp"
            android:layout_marginEnd="3dp" />

        <TextView
            android:id="@+id/hora_ingreso"
            android:text="00:00:00"
            android:textSize="12dp"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/text_ingreso"
            android:layout_alignBottom="@+id/text_ingreso"
            android:layout_centerHorizontal="true" />


        <TextView
            android:id="@+id/text_salida"
            android:text="Salida :"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/hora_ingreso"
            android:layout_toEndOf="@+id/hora_ingreso" />

        <TextView
            android:id="@+id/hora_salida"
            android:text="00:00:00"
            android:textSize="12dp"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="45dp"
            android:layout_toRightOf="@+id/hora_ingreso" />



    </RelativeLayout>
   </LinearLayout>


    <View
        android:background="@color/view_color"
        android:layout_width="match_parent"
        android:layout_height="1px"
        ></View>


</LinearLayout>